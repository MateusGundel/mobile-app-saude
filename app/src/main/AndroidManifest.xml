<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.elefante.app_saude">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileAppSaude"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">

        <activity android:name=".login.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.LoginCode" />
        <activity android:name=".Menu" />
        <activity android:name=".login.Recover" />
        <activity android:name=".login.Register" />
        <activity
            android:name=".measurement.Vaccine"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".measurement.VaccineAdd"
            android:parentActivityName=".measurement.Vaccine" />
        <activity
            android:name=".measurement.VaccineShow"
            android:parentActivityName=".measurement.Vaccine" />
        <activity
            android:name=".measurement.BloodPressure"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".measurement.BloodPressureAdd"
            android:parentActivityName=".measurement.BloodPressure" />
        <activity
            android:name=".measurement.BloodPressureShow"
            android:parentActivityName=".measurement.BloodPressure" />
        <activity
            android:name=".measurement.Diabetes"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".measurement.DiabetesAdd"
            android:parentActivityName=".measurement.Diabetes" />
        <activity
            android:name=".measurement.DiabetesShow"
            android:parentActivityName=".measurement.Diabetes" />
        <activity
            android:name=".measurement.HeartBeat"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".measurement.HeartBeatAdd"
            android:parentActivityName=".measurement.HeartBeat" />
        <activity
            android:name=".measurement.HeartBeatShow"
            android:parentActivityName=".measurement.HeartBeat" />
        <activity
            android:name=".measurement.Height"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".measurement.HeightAdd"
            android:parentActivityName=".measurement.Height" />
        <activity
            android:name=".measurement.HeightShow"
            android:parentActivityName=".measurement.Height" />
        <activity
            android:name=".measurement.Weight"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".measurement.WeightAdd"
            android:parentActivityName=".measurement.Weight" />
        <activity
            android:name=".measurement.WeightShow"
            android:parentActivityName=".measurement.Weight" />
        <activity
            android:name=".measurement.Imc"
            android:parentActivityName=".Menu" />
        <activity
            android:name=".user.UserInfo"
            android:parentActivityName=".Menu" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>