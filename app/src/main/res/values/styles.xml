<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
    </style>
    <style name="MenuItem">
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="edit_text" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="button_login" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="title_edit_text" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">#384144</item>
        <item name="android:fontFamily">sans-serif-medium</item>
       <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="container_blood_pressure">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bckground_blood_pressure</item>
    </style>
    <style name="container_component">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/container_components</item>

    </style>
</resources>